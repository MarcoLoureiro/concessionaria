<h1>Dados da moto:</h1>
{{>partials/header}}
<div class="container">
    <div class="form-content">
        <div class="form-items">
            <h3>Dados da Moto:</h3>
            <form action="/moto-novo-moto" method="post">
                <div class="form-group">
                    <label>Modelo:</label>
                    <input type="text" name="modelo" placeholder="Modelo da moto" class="form-control">
                </div>
                <div class="form-group">
                    <label>Ano de Fabricação:</label>
                    <input type="number" name="anoFabricacao" placeholder="Ano de fabricação do veículo" class="form-control">
                </div>
                <div class="form-group">
                    <label>Marca:</label>
                    <input type="text" name="marca" placeholder="Digite a marca do veículo" class="form-control">
                </div>

                <div class="form-group">
                    <label for="exampleFormControlSelect1">Passageiros:</label>
                    <select class="form-control" name="passageiros">
                    <option>1</option>
                    <option>2</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

{{>partials/footer}}